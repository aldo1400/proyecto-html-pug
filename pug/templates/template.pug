block config
    include ../config/config.pug

doctype html
html
    head
        title #{pageTitle} | #{siteTitle}
        meta(charset="utf-8")
        meta(name='description' content=description)
        link(rel='stylesheet' href='https://cdn.rawgit.com/escueladigital/EDgrid/1f5abcec/css/ed-grid.min.css')
        link(rel='stylesheet' href='/css/styles.css')
    body
        header.main-header
            a(href="/")
                img(src='/img/descarga.png').logo
            nav.menu
                include ../blocks/menu.pug
        div
            block banner
                img(src='/img/'+currentPage + '.jpg')
        main
            block main
        aside
            block aside
                if siguenos == true
                    include ../blocks/siguenos.pug
        footer
            p Creativos ABC - Todos los derechos reservados
            block footer
